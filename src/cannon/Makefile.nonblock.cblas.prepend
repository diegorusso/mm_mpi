include ../../Makefile.mm.inc

VPATH = ../shared

OBJECTS = mm.o check.o gendat.o mxm-nonblock.o mxms.o \
          format.o reset.o utils.o

EXEC    = x.mm

${EXEC}: ${OBJECTS}
	@echo
	${LD_MPI} ${LDFLAGS} ${OBJECTS} ${LIBS} -o ${EXEC}

.SUFFIXES:  .c .o
.c.o    :
	@echo
	${CC_MPI} ${CFLAGS} -D__CBLAS -D__PREPOSTED_NONBLOCKING ${INCS} -c -o $@ $<

clean   :
	/bin/rm -f ${OBJECTS}

veryclean:
	/bin/rm -f ${OBJECTS} ${EXEC}

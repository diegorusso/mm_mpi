include ../../Makefile.mm.inc

VPATH = ../shared

OBJECTS = mm.o check.o prthead.o gendat.o prtspeed.o mxm-nonblock.o \
          state.o reset.o

EXEC    = x.mm

${EXEC}: ${OBJECTS}
	@echo
	${LD_MPI} ${LDFLAGS} ${OBJECTS} ${LIBS} -o ${EXEC}

.SUFFIXES:  .c .o
.c.o    :
	@echo
	${CC_MPI} ${CFLAGS} -D__OPENMP_OUTER ${INCS} -c -o $@ $<

clean   :
	/bin/rm -f ${OBJECTS}

veryclean:
	/bin/rm -f ${OBJECTS} ${EXEC}
